{% extends 'base.html.twig' %}

{% block title %}
	SymRecipe - Mes ingrédients
{% endblock %}

{% block body %}
	<div class="container mt-4">
		{% if not ingredients.items is same as([]) %}
			<h1>Mes Ingrédients</h1>

			<a href="{{path('ingredient.new')}}" class="btn btn-primary m-4">
				Créer un ingrédient</a>

			{% for message in app.flashes('success') %}
				<div class="alert alert-success mt-4">
					{{ message }}
				</div>
			{% endfor %}

			<div class="count">
				<h4>
					Il y a
					{{ ingredients.getTotalItemCount}}
					ingrédients au total
				</h4>
			</div>
			<table class="table table-hover mt-4">
				<thead>
					<tr>
						<th scope="col">
							<font style="vertical-align: inherit;">
								<font style="vertical-align: inherit;">Numéro</font>
							</font>
						</th>
						<th scope="col">
							<font style="vertical-align: inherit;">
								<font style="vertical-align: inherit;">Nom</font>
							</font>
						</th>
						<th scope="col">
							<font style="vertical-align: inherit;">
								<font style="vertical-align: inherit;">Prix</font>
							</font>
						</th>
						<th scope="col">
							<font style="vertical-align: inherit;">
								<font style="vertical-align: inherit;">Date de création</font>
							</font>
						</th>
						<th scope="col">
							<font style="vertical-align: inherit;">
								<font style="vertical-align: inherit;">Edition</font>
							</font>
						</th>
						<th scope="col">
							<font style="vertical-align: inherit;">
								<font style="vertical-align: inherit;">Suppresion</font>
							</font>
						</th>
					</tr>
				</thead>
				<tbody>
					{% for ingredient in ingredients %}
						<tr class="table-primary">
							<th scope="row">
								<font style="vertical-align: inherit;">
									<font style="vertical-align: inherit;">{{ingredient.id}}</font>
								</font>
							</th>
							<td>
								<font style="vertical-align: inherit;">
									<font style="vertical-align: inherit;">{{ingredient.name}}</font>
								</font>
							</td>
							<td>
								<font style="vertical-align: inherit;">
									<font style="vertical-align: inherit;">{{ingredient.price}}</font>
								</font>
							</td>
							<td>
								<font style="vertical-align: inherit;">
									<font style="vertical-align: inherit;">{{ingredient.createdAt|date("d/m/y")}}</font>
								</font>
							</td>
							<td>
								<font style="vertical-align: inherit;">
									<a href="{{path('ingredient.edit',{id: ingredient.id})}}" class='btn btn-info'>Modifier</a>
								</font>
							</td>
							<td>
								<font style="vertical-align: inherit;">
									<a href="{{path('ingredient.delete',{id: ingredient.id})}}" class='btn btn-danger'>Supprimer</a>
								</font>
							</td>
						</tr>
					{% endfor %}


				</tbody>
			</table>
			<div class="navigation d-flex justify-content-center">
				{{ knp_pagination_render(ingredients) }}
			</div>
		{% else %}
			<h4>
				Il n'y a pas d'ingredients
			</h4>
		{% endif %}
	</div>
{% endblock %}
